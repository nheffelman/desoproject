                size_hint: (0.8, None)
                height: '40dp'
                on_text_validate: root.textInput(self)
            MDRoundFlatButton:
                text: 'Login'
                pos_hint: {'center_x': 0.5}
                size_hint: (0.8, None)
                height: '40dp'
                on_press: root.onClick()
            Widget:



